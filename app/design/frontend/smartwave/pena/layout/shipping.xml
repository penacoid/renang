<?xml version="1.0"?>
<layout>
    <default>
      <reference name="head">
          <action method="addCss"><stylesheet>css/pena.css</stylesheet></action>  
      </reference>
    </default>
    
    <customer_address_form translate="label">
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/pena.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/jquery-ui.js</name></action>
        </reference>
        <reference name="customer_address_edit">
            <action method='setTemplate'><template>customer/address/edit.phtml</template></action>
        </reference>
    </customer_address_form>
    
    <checkout_onepage_index translate="label">
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/pena.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/jquery-ui.js</name></action>
        </reference>
        <reference name="checkout.onepage.billing">
            <action method='setTemplate'><template>checkout/address/billing.phtml</template></action>
        </reference>
        <reference name="checkout.onepage.shipping">
            <action method='setTemplate'><template>checkout/address/shipping.phtml</template></action>
        </reference>
    </checkout_onepage_index>
</layout>
